<% if @friends %>
	<ul>
		<% @friends.each do |friend| %>
			<li>

				<%= form_tag("/gamechat", method: "get") do %>	
				
					<div> 
						<%= hidden_field_tag :friend_id, friend.id %>	
					</div>
					
					<div>
						<input  type="submit" value="<%=friend.user_name %>">
					</div>
				<% end %>
				
			</li>
		<% end %>
	</ul>

	<div id ="chess">
		<ul id="chessboard"></ul>
	</div>

	<div id ="chat">
		<div id="next_message_link">
		 	<%= render 'shared/next_link' %>
		</div>
		<%= render "chat" %>
	</div>	

<% end %>