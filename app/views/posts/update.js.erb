post = document.querySelectorAll(".editing")[0];



<% if @post.errors.empty? %>

	post.setAttribute("id","post_<%=@post.id%>");
	post.classList.remove("editing")	
	post.innerHTML = "<%= j render 'shared/post' , post: @post  %>";

<% else %>
	
	//create errors partial to display
	post.innerHTML = "<%= j render 'shared/post_form' %>";

<% end %>